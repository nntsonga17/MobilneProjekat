<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"

        >
        <ImageView
            android:id="@+id/imageViewR3"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:src="@drawable/elfak" />


        <TextView
            android:id="@+id/textViewR10"
            style="@style/Theme.CityExplorer"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_name"
            android:textAlignment="center"

            android:textSize="48sp" />

        <TextView
            android:id="@+id/textViewWelcomeHome"
            style="@style/Theme.CityExplorer"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:gravity="center"
            android:text="Welcome"
            android:textAlignment="center"
            android:textSize="34sp" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadNamepic"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="166dp"
                android:layout_height="107dp"
                android:layout_marginBottom="30dp" />

            <LinearLayout
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewUserHome"
                    style="@style/Theme.CityExplorer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"

                    android:textSize="34sp"
                    tools:text="Ime" />

                <TextView
                    android:id="@+id/textViewUserLastname"
                    style="@style/Theme.CityExplorer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="34sp"
                    tools:text="Prezime" />
            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/buttonAddObject"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:text="Add" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Search" />

        <Button
            android:id="@+id/buttonUserList"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:text="User list" />
        <Button
            android:id="@+id/buttonKomentarisiOcena"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:text="Grade and comment" />
        <Button
            android:id="@+id/buttonMyComments"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:text="My Comments" />


        <Button
            android:id="@+id/buttonMyPlaces"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="My Places" />

        <org.osmdroid.views.MapView
            android:id="@+id/mapGPS"
            tilesource="Mapnik"
            android:layout_width="match_parent"
            android:layout_height="371dp" />

    </LinearLayout>
</ScrollView>